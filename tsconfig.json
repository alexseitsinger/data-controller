{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./build/",
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "lib": ["dom", "es2015"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": [
    "src", "typings", "tests"
  ],
  "exclude": [
    "node_modules",
    ".yalc",
    "build",
    "dist",
    "tests"
  ]
}
